{
  "name": "z-indexify",
  "version": "0.1.2",
  "description": "A sane way to manage CSS z-indexes",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "esm/"
  ],
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "clear": "rimraf lib esm",
    "build:cjs": "tsc -d",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "npm run clear && npm run build:cjs && npm run build:es",
    "start": "tsc -w -m esNext --outDir esm",
    "lint:js": "eslint src/**/*.ts --fix --color",
    "lint": "npm run lint:js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test": "jest --maxWorkers=50%",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zeindelf/z-indexify"
  },
  "homepage": "https://github.com/zeindelf/z-indexify#readme",
  "bugs": {
    "url": "https://github.com/zeindelf/z-indexify/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Zeindelf",
    "email": "zeindelf@hotmail.com",
    "homepage": "https://zeindelf.com"
  },
  "keywords": [
    "z-index",
    "zindex",
    "css",
    "css-in-js",
    "style",
    "styling",
    "styled",
    "styled-components",
    "tailwind",
    "tailwindcss",
    "twind",
    "helper",
    "utils",
    "api"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "codecov": "^3.8.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "15.2.2",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.7",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  }
}
